@*Dashboard*@
<head>
    <script src="https://unpkg.com/intro.js/minified/intro.min.js" type="text/javascript"></script>
    <link href="https://unpkg.com/intro.js/minified/introjs.min.css" rel="stylesheet" type="text/css" />

</head>
<div class="content-wrapper">

    <div class="content-header">
        <a asp-action="ShowUser" asp-controller="Logged"></a>
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Dashboard</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Dashboard v1</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <form id="quickForm" class="form-horizontal card__body" data-title="Welcome to Dashboard" data-intro="Go to users registration...">
        <section class="content">
            <div class="container-fluid">

                <div class="row">
                    <div class="col-lg-3 col-6">

                        <div class="small-box bg-info card__body" data-title="New orders" data-intro=" this is New orders">
                            <div class="inner">
                                <h3>150</h3>

                                <p>New Orders</p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-bag"></i>
                            </div>
                            <a href="#" class="small-box-footer form-control card__body" data-title="New orders" data-intro=" this is New orders">More info <i class="fas fa-arrow-circle-right"></i></a>
                        </div>
                    </div>

                    <div class="col-lg-3 col-6">

                        <div class="small-box bg-success card__body" data-title="Bounce rate" data-intro="Bounce rate">
                            <div class="inner">
                                <h3>53<sup style="font-size: 20px">%</sup></h3>

                                <p>Bounce Rate</p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-stats-bars"></i>
                            </div>
                            <a href="#" class="small-box-footer form-control card__body" data-title="Bounce rate" data-intro="Bounce rate">More info <i class="fas fa-arrow-circle-right"></i></a>
                        </div>
                    </div>

                    <div class="col-lg-3 col-6">

                        <div class="small-box bg-warning card__body" data-title="Total Users" data-intro="Total Users">
                            <div class="inner">
                                <h3><span>@ViewBag.UsersCount</span></h3>

                                <p>Users Registrations</p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-person-add"></i>
                            </div>
                            <a href="#" class="small-box-footer form-control card__body" data-title="Total Users" data-intro="Total Users">More info <i class="fas fa-arrow-circle-right"></i></a>
                        </div>
                    </div>

                    <div class="col-lg-3 col-6">

                        <div class="small-box bg-danger card__body" data-title="Unique Visitors" data-intro="Unique Visitors">
                            <div class="inner">
                                <h3>65</h3>

                                <p>Unique Visitors</p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-pie-graph"></i>
                            </div>
                            <a href="#" class="small-box-footer form-control card__body" data-title="Unique Visitors" data-intro="Unique Visi">More info <i class="fas fa-arrow-circle-right"></i></a>
                        </div>
                    </div>

                </div>
                <div class="row">

                    <section class="col-lg-7 connectedSortable">
                    </section>

                    <section class="col-lg-5 connectedSortable">

                        <div class="card bg-gradient-primary">

                        </div>

                    </section>

                </div>

            </div>
        </section>
    </form>

</div>

<script>
    introJs().start()

</script>

